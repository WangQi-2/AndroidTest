<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">#4876FF</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">#3A5FCD</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- SearchView -->
    </style>

    <!-- Button-->
    <style name="AppTheme.WWButton" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.MMButton" parent="AppTheme.WWButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--switch-->
    <style name="AppTheme.Switch">
        <item name="android:thumb">@drawable/star_yellow</item>
        <item name="android:textOn">@string/capital_on</item>
        <item name="android:textOff">@string/capital_off</item>
        <item name="android:thumbTextPadding">12dip</item>
        <item name="android:switchMinWidth">96dip</item>
        <item name="android:switchPadding">16dip</item>
    </style>

    <!-- TextView-->
    <style name="AppTheme.WWTextView" parent="AppTheme.WWButton"></style>
    <style name="AppTheme.MMTextView" parent="AppTheme.MMButton"></style>

    <!-- ImageView-->
    <style name="AppTheme.WWImageView" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!--ListView-->
    <style name="AppTheme.ListView" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:dividerHeight">@dimen/zero</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadeEnabled">false</item>
        <item name="android:listSelector">@drawable/selector_list_background</item>
    </style>
    <!--Activity-->
    <style name="AppTheme.FloatActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
